{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier"
  ],
  "plugins": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "class-methods-use-this": 0,
    "no-param-reassign": 0,
    "import/prefer-default-export": "off",
    "max-classes-per-file": [
      "error",
      {
        "ignoreExpressions": true,
        "max": 2
      }
    ]
  }
}
